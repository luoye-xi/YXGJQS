<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_item_trans_statu"
        style="@style/text_style_light_black_14"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/icon_tran_info_titlet"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="取件检查" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.linkstar.app.yxgjqs.view.CircleImageView
            android:id="@+id/cimg_transport_personal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/rest_icon_personal_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cimg_transport_personal"
            android:orientation="vertical"
            android:paddingLeft="13dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_trans_name"
                    style="@style/text_style_light_black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隔壁老六" />

                <TextView
                    android:id="@+id/tv_item_trans_qs"
                    style="@style/text_style_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_blue_10dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="骑手" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_trans_desc"
                style="@style/text_style_gray_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="已配送订单：1914     好评率：100%" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_link_this"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_link_phone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_trans_beizhu"
        style="@style/text_style_light_black_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/icon_tips"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="取件骑手备注：衣服少扣  鞋子没有鞋带" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_transport_cloth_1" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_transport_cloth_2" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_transport_cloth_3" />
    </LinearLayout>
</LinearLayout>

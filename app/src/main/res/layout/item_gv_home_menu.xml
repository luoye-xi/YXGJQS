<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_home_menu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_order_to_get" />

        <TextView
            android:id="@+id/tv_item_home_num_point"
            style="@style/text_style_white_12"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/icon_num_point"
            android:gravity="center"
            android:visibility="invisible"
            android:text="8" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_home_menu"
        style="@style/text_style_light_black_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_home_menu"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="待收货" />
</LinearLayout>

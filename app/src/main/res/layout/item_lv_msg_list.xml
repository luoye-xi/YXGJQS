<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/back_ground_gray">

    <TextView
        android:id="@+id/tv_msg_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_style_gray_12"
        android:padding="12dp"
        android:text="今天 09:06"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:padding="14dp"
        android:background="@drawable/edittext_white_bg_coner"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_light_black_14"
            android:text="优惠券即将过期"/>

        <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_gray_12"
            android:gravity="left"
            android:layout_marginTop="8dp"
            android:text="您有1张总价值40元优惠券即将到期，快去用吧，浪费太可惜啦~"/>

    </LinearLayout>
</LinearLayout>

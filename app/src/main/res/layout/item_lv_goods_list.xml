<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="13dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_cloth_type"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:background="@drawable/btn_bg_gray_line"
        android:src="@drawable/test_cloth_1"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/img_cloth_type"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洗衣/上装洗护"
            style="@style/text_style_light_black_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="衬衣/T恤"
            style="@style/text_style_gray_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="×2"
            style="@style/text_style_gray_12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cloth_type_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥99.99"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        style="@style/text_style_blue_14"
        android:textStyle="bold"/>
</RelativeLayout>
